/**common css **/
.w{
  color: white;
}
.weather_word{
  font-weight: bold;
}
.center{
  text-align: center;
  margin: auto 0;
}
.img{
  width: 60rpx;
  height: 60rpx;
  margin-right: 60rpx;
}

/**index.wxss**/
.break{
  border: 2rpx solid #fff;
}
.weather_bg{
  width: 100%;
  height: 600rpx;
}

.temp{
  font-size: 32px;
}

.container{
  position: absolute;
  left: 0;
  top: 0;
  width:100%;
  padding: 0;
  margin: 0;
  height: 700rpx;
  display: block;
}

.nowWeather{
  padding: 60rpx;
}

.weatherDeatil{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: absolute;
  bottom: 130rpx;
}

.hor{
  display: flex;
}

.forcast{
  padding: 30rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  border-bottom: 1rpx solid #eee;
  justify-content: space-around;
}
